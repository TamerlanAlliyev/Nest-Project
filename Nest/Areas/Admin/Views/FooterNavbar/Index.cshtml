@model List<FooterHeads>
@{
    int con = 1;
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 mt-3">Catagories</h1>
    <p class="mb-4">
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categories Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="col-sm-12">
                        <table class="table table-bordered table-hover  dataTable align-text-center" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>

                                <tr role="row " style="text-align:center;">
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 10px;">N°</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 10px;">Order</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 150px;">Name</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 10px;">Details</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 10px;">Edit</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 10px;">Remove</th>
                            </thead>
                            <tfoot>
                                <tr style="text-align:center;">
                                    <th rowspan="1" colspan="1">N°</th>
                                    <th rowspan="1" colspan="1">Order</th>
                                    <th rowspan="1" colspan="1">Name</th>
                                    <th rowspan="1" colspan="1">Details</th>
                                    <th rowspan="1" colspan="1">Edit</th>
                                    <th rowspan="1" colspan="1">Remove</th>
                            </tfoot>
                            <tbody style="text-align:center;">
                                
                                @foreach (FooterHeads navbar in Model)
                                {
                                    <tr  class="even  align-items-center" >

                                        <td style="vertical-align: middle;" class="align-items-center">@(con++)</td>
                                        <td style="vertical-align: middle;" class="align-items-center">@navbar.Order</td>
                                        <td style="vertical-align: middle;" class="align-items-center">@navbar.Head</td>

                                        <td style="vertical-align: middle;" class="align-items-center">
                                            <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="Detail" asp-route-id="@navbar.Id" class="btn btn-sm btn-primary">Detail</a>
                                        </td>
                                        <td style="vertical-align: middle;" class="align-items-center">
                                            <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="Update" asp-route-id="@navbar.Id" class="btn btn-sm btn-warning">Edit</a>
                                        </td>
                                        <td style="vertical-align: middle;" class="align-items-center">
                                            <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="Delete" asp-route-id="@navbar.Id" class="btn btn-sm btn-danger">Remove</a>
                                        </td>
                                    </tr>
                                }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section CategoryScript {
    <script src="~/admin/vendor/jquery/jquery.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}