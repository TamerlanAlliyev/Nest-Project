@model FooterVM
@{
    int con = 1;
}
<div class="container mt-5">
    <div class="card">
        <div class="card-body mt-5 ml-5 ">
            <div class="row">

                <div class="col-lg-10 col-md-2 col-sm-10 ml-3 mr-3">

                    <div class="d-flex justify-content-center align-items-center">

                        <div class="mr-5">
                            <h3 class="box-title mb-4">@Model.FooterHead.Head</h3>
                            <td class="text-center">
                                <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="Update" asp-route-id="@Model.FooterHead.Id" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                            <td class="text-center">
                                <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="Delete" asp-route-id="@Model.FooterHead.Id" class="btn btn-sm btn-danger">Remove</a>
                            </td>
                        </div>
                    </div>

                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Sub List</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>

                                @foreach (FooterSub sub in Model.FooterHead.FooterSubs)
                                {
                                    <tr>
                                        <td width="390">@(con++)</td>
                                        <td>@sub.SubList</td>
                                        <td>@sub.Order</td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="SubListDetail" asp-route-id="@sub.Id" class="btn btn-sm btn-primary mr-2">Detail</a>
                                            <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="SubListUpdate" asp-route-id="@sub.Id" asp-route-head="@Model.FooterHead.Id" class="btn btn-sm btn-warning ">Edit</a>
                                            <a asp-area="Admin" asp-controller="FooterNavbar" asp-action="SubListDelete" asp-route-id="@sub.Id" asp-route-head="@Model.FooterHead.Id" class="btn btn-sm btn-danger ">Remove</a>
                                        </td>
                                    </tr>
                                }




                            </tbody>
                        </table>
                    </div>


                </div>


               
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-column text-center mt-5">
        <h5>Create a new subcategory for @Model.FooterHead.Head</h5>
        <a class="btn btn-success mt-3 mb-5 w-25" asp-area="Admin" asp-controller="FooterNavbar" asp-action="SubListCreate" asp-route-id="@Model.FooterHead.Id">Get</a>
    </div>

   
</div>
