@model Product


<div class="container mt-5" method="post">
    <h1 class="card-title mb-5">Detail</h1>
    <div class="card">
        <div class="card-body mt-5 ml-5 ">
            <div class="row">

                <div class="col-lg-10 col-md-2 col-sm-10 ml-3 mr-3">

                    <div class="d-flex justify-content-center align-items-center">

                        <div class="mr-5">
                            <h3 class="box-title mb-4">@Model.Name</h3>
                            <td class="text-center">
                                <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                            <td class="text-center">
                                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Remove</a>
                            </td>
                        </div>


                        <div>
                            <div class="col-lg-2 " style="width:90px;">
                                <div class="white-box text-center " style="width:90px;">
                                    <img src="~/cilent/imgs/products/@Model.ProductImages.Where(pi=>!pi.IsDeleted).Select(pi=>pi.Url).FirstOrDefault()" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>

                                <tr>
                                    <td width="390">Number of Products in a Category</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td width="390">Creat by</td>
                                    <td>@Model.CreateBy</td>
                                </tr>
                                <tr>
                                    <td width="390">Created date</td>
                                    <td>@Model.Created</td>
                                </tr>
                                <tr>
                                    <td width="390">Modified by</td>
                                    <td>@Model.ModifiedBy</td>
                                </tr>
                                <tr>
                                    <td width="390">Modified date</td>
                                    <td>@Model.Modified</td>
                                </tr>
                                <tr>
                                    <td width="390">IP Address</td>
                                    <td>@Model.IPAddress</td>
                                </tr>
                    

                            </tbody>
                        </table>
                    </div>

                    @if (Model.Sizes != null)
                    {
                    <div class="container">
                        <table class="table table-hover ">
                            <thead class="head bg-primary text-white" style="cursor: pointer;">
                                <tr>
                                    <th>#</th>
                                    <th>Size</th>
                                    <th>Count</th>
                                </tr>
                            </thead>
                            <tbody class="body hidden" style="display: none;">
@*                                 <tr>
                                    <td>1</td>
                                    <td>Smol</td>
                                    <td>Count</td>
                                </tr> *@

                                @foreach(Size size in Model.Sizes){
                                    <tr>
                                        <td>1</td>
                                        <td>@size.Name</td>
                                        <td>@size.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    }

                    @if (Model.Weights != null)
                    {
                        <div class="container">
                            <table class="table table-hover ">
                                <thead class="head bg-primary text-white" style="cursor: pointer;">
                                    <tr>
                                        <th>#</th>
                                        <th>Size</th>
                                        <th>Count</th>
                                    </tr>
                                </thead>
                                <tbody class="body hidden" style="display: none;">
                                    @*                                 <tr>
                                <td>1</td>
                                <td>Smol</td>
                                <td>Count</td>
                                </tr> *@

                                    @foreach (Weight weight in Model.Weights)
                                    {
                                        <tr>
                                            <td>1</td>
                                            <td>@weight.Gram</td>
                                            <td>@weight.Count</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }


                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
@* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script> *@
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $('.head').click(function () {
            $(this).siblings('.body').toggle();
        });
    });
</script>

<script>
    const lists = document.querySelector(".lists")
    const list = document.querySelector(".list")
    let status = false
    lists.addEventListener("click", () => {
        if (status) {
            list.style.display = "none"; // Önceki hata burada. Görünürlüğü "none" olarak değiştir.
            status = false; // Görünürlük kapalı olduğunda durumu güncelle.
        } else {
            list.style.display = "block"; // Görünürlüğü "block" olarak değiştir.
            status = true; // Görünürlük açık olduğunda durumu güncelle.
        }
    })
</script>
