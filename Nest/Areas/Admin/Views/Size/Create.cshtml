@model SizeVM


<div class="container d-flex justify-content-center align-self-lg-center w-25" style="width: 500px; border-radius: 15px; border:1px solid dodgerblue; color: black;">
    <div class="card-body">
        <form method="post" >
            <div class="form-group mb-3">
                <label>Name</label>
                <input class="form-control " asp-for="Size.Name" />
                <span class="text-danger" asp-validation-for="Size.Name"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

