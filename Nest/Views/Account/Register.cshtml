@model RegisterVM
<main class="main pages">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a asp-action="Index" asp-controller="Home" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
                <span></span> Pages <span></span> My Account
            </div>
        </div>
    </div>
    <div class="page-content pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                    <div class="row">
                        <div class="col-lg-6 col-md-8">
                            <div class="login_wrap widget-taber-content background-white">
                                <div class="padding_eight_all bg-white">
                                    <div class="heading_s1">
                                        <h1 class="mb-5">Create an Account</h1>
                                        <p class="mb-30">Already have an account? <a href="~/cilentpage-login.html">Login</a></p>
                                    </div>
                                    <form method="post">
                                        <div class="form-group">
                                            <input asp-for="Name" type="text" name="Name" placeholder="Name" />
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Surname" type="text" name="Surname" placeholder="Surname" />
                                            <span class="text-danger" asp-validation-for="Surname"></span>

                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Username" type="text" name="Username" placeholder="Username" />
                                            <span class="text-danger" asp-validation-for="Username"></span>

                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Email" type="text" name="email" placeholder="Email" />
                                            <span class="text-danger" asp-validation-for="Email"></span>

                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Password" type="password" name="password" placeholder="Password" />
                                            <span class="text-danger" asp-validation-for="Password"></span>

                                        </div>
                                        <div class="form-group">
                                            <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" placeholder="Confirm password" />
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                                        </div>
                                        @*    <div class="login_footer form-group">
                                        <div class="chek-form">
                                        <input type="text" required="" name="email" placeholder="Security code *" />
                                        </div>
                                        <span class="security-code">
                                        <b class="text-new">8</b>
                                        <b class="text-hot">6</b>
                                        <b class="text-sale">7</b>
                                        <b class="text-best">5</b>
                                        </span>
                                        </div> *@
                                        <div class="custome-radio d-flex gap-3 align-items-center ">
                                            <input asp-for="IsVendor" style="width:20px;" />
                                            <label for="exampleRadios3" data-bs-toggle="collapse" data-target="#bankTranfer" aria-controls="bankTranfer">I am a Vendor</label>
                                        </div>
                                        <div class="custome-radio d-flex gap-3 align-items-center ">
                                            <input asp-for="Policy" style="width:20px;" />
                                            <label for="exampleRadios3" data-bs-toggle="collapse" data-target="#bankTranfer" aria-controls="bankTranfer">I agree to terms &amp; Policy.</label>
                                            <span class="text-danger" asp-validation-for="Policy">Please select "I agree to terms & Policy" to proceed. Thank you.</span>

                                        </div>


                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        <div class="form-group mb-30">
                                            <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Submit &amp; Register</button>
                                        </div>
                                        <p class="font-xs text-muted"><strong>Note:</strong>Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy</p>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 pr-30 d-none d-lg-block">
                            <div class="card-login mt-115">
                                <a href="~/cilent#" class="social-login facebook-login">
                                    <img src="~/cilent/imgs/theme/icons/logo-facebook.svg" alt="" />
                                    <span>Continue with Facebook</span>
                                </a>
                                <a href="~/cilent#" class="social-login google-login">
                                    <img src="~/cilent/imgs/theme/icons/logo-google.svg" alt="" />
                                    <span>Continue with Google</span>
                                </a>
                                <a href="~/cilent#" class="social-login apple-login">
                                    <img src="~/cilent/imgs/theme/icons/logo-apple.svg" alt="" />
                                    <span>Continue with Apple</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>