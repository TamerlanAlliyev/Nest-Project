@model List<Category>
<ul>
    @foreach (Category category in Model)
    {
        <li>
            <a href="shop-grid-right.html"> <img src="~/admin/icons/categories/@category.Icon" alt="@category.Icon" />@category.Name</a><span class="count">@category.CategoryProducts.Count()</span>
        </li>
    }
</ul>